<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/r_image"
    android:layout_marginStart="3dp"
    android:layout_marginEnd="3dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/new_border_lines">

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clImg1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_photo1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="#E0E0E0"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivDelete1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_vector_delete"
                android:scaleType="centerCrop"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:minHeight="17sp"
                android:minWidth="17sp"
                android:adjustViewBounds="true"
                app:layout_constraintStart_toStartOf="@id/img_photo1"
                app:layout_constraintTop_toTopOf="@id/img_photo1" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivEdit1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_vector_edit"
                android:scaleType="centerCrop"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:minHeight="17sp"
                android:minWidth="17sp"
                android:adjustViewBounds="true"
                app:layout_constraintEnd_toEndOf="@id/img_photo1"
                app:layout_constraintTop_toTopOf="@id/img_photo1" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivAdd1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/ic_vector_add"
                android:scaleType="centerCrop"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="center_horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clImg2"
            android:layout_toEndOf="@+id/clImg1"
            android:layout_width="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_photo2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="#E0E0E0"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivDelete2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_vector_delete"
                android:scaleType="centerCrop"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:minHeight="17sp"
                android:minWidth="17sp"
                android:adjustViewBounds="true"
                app:layout_constraintStart_toStartOf="@id/img_photo2"
                app:layout_constraintTop_toTopOf="@id/img_photo2" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivEdit2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_vector_edit"
                android:scaleType="centerCrop"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:minHeight="17sp"
                android:minWidth="17sp"
                android:adjustViewBounds="true"
                app:layout_constraintEnd_toEndOf="@id/img_photo2"
                app:layout_constraintTop_toTopOf="@id/img_photo2" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivAdd2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/ic_vector_add"
                android:scaleType="centerCrop"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="center_horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

